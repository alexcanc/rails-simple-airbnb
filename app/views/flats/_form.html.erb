<%= form_with(model: @flat, local: true) do |form| %>
  <!-- fields for the flat details -->
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :address %>
  <%= form.text_field :address %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :price_per_night %>
  <%= form.number_field :price_per_night %>

  <%= form.label :number_of_guests %>
  <%= form.number_field :number_of_guests %>

  <%= form.submit %>
<% end %>
